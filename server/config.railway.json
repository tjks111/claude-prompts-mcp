{
  "server": {
    "name": "Claude Custom Prompts",
    "version": "1.0.0",
    "port": "${PORT:-3000}"
  },
  "prompts": {
    "file": "promptsConfig.json",
    "registrationMode": "name"
  },
  "transports": {
    "default": "sse",
    "sse": { "enabled": true },
    "stdio": { "enabled": false }
  },
  "logging": {
    "directory": "./logs",
    "level": "info"
  }
}